<resources>

    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_top_bar_back</item>
    </style>

    <style name="MyActionBar" parent="android:Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/actionbar_bg</item>
        <item name="android:titleTextStyle">@style/MyActionBarTitleText</item>
    </style>
    <style name="MyActionBarTitleText" parent="android:TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/actionbar_title_bg</item>
        <item name="android:textSize">@dimen/actionbar_title_text_size</item>
    </style>

    <style name="articleListTitle">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/title_color</item>
    </style>
    <style name="articleListTime">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/time_color</item>
    </style>

    <style name="menuItemTitle">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/menu_item_text_color</item>
    </style>

</resources>
